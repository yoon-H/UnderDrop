				float4 lerpResult21 = lerp( _TrailColor , tex2DNode4 , _TextureAffect);
				float4 break25 = lerpResult21;
				float4 appendResult24 = (float4(break25.r , break25.g , break25.b , ( _TrailColor.a * tex2DNode4.a )));
				
				fixed4 c = appendResult24;
				c.rgb *= c.a;
				return c;
			}
		ENDCG
